<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:background="@color/colorPrimary">
    <!-- 返回view -->
    <Button
        android:id="@+id/common_btn_back"
        android:layout_height="@dimen/dp_90"
        android:layout_width="@dimen/dp_94"
        android:layout_centerVertical="true"
        android:background="@null"
        android:drawablePadding="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_30"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_middle" />

    <!-- 左边view 有返回view 就没有这个控件 -->
    <Button
        android:id="@+id/common_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:drawablePadding="@dimen/dp_15"
        android:maxWidth="@dimen/dp_360"
        android:paddingLeft="@dimen/dp_30"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_middle"
        android:visibility="gone" />

    <!-- 标题 title -->
    <TextView
        android:id="@+id/common_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />

    <!-- 右边view -->

    <Button
        android:id="@+id/common_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:paddingRight="@dimen/dp_30"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_middle"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/cb_select_all"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/common_btn_right"
        android:text="全选"
        android:textSize="@dimen/text_size_middle"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_common_setting_and_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/iv_common_setting"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_51"
            android:clickable="true" />

        <View
           android:layout_height="match_parent"
            android:layout_width="0.5dp"
            android:background="@color/c_dedede"
            android:layout_marginBottom="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_39" />

        <Button
            android:id="@+id/iv_common_message"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_51"
            android:clickable="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_dedede"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>